<div class="container">
  <div class="w-25 mx-auto py-5">
    <div class="mb-3">
      <h2>Redefinir Senha</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, data: { turbo: false }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-4">
        <%= f.label :password, "Nova senha" %><br />
        <%= f.password_field :password, autofocus: true, class: "form-control" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, "Confirme nova senha" %><br />
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Atualizar", class: 'btn btn-lg btn-primary' %>
      </div>
    <% end %>

    <br />
    <%= render "devise/shared/links" %>
  </div>
</div>
